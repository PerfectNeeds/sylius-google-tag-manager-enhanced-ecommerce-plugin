{# @var product \Sylius\Component\Core\Model\ProductInterface #}
{% set product = settings.product %}

<script type="text/javascript">
    dataLayer.push({
        'ecommerce': {
            'detail': {
                'products': [
                    {%- for variant in product.variants -%}
                        {% include 'GtmEnhancedEcommercePlugin:ProductDetail:_variant.html.twig' with {'variant': variant, 'product': settings.product, 'loop': loop} only %}
                        {%- if loop.last is same as(false) %},{% endif -%}
                    {% endfor %}
                ]
            }
        }
    });
</script>
